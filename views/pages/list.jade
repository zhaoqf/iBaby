extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-condensed
                thead
                    tr
                        th 电影名字
                        th 导演
                        th 国家
                        th 上映年份
                        th 更新时间 
                tbody
                    each item in movies
                        tr(class="item-id-#{item._id}")
                            td #{item.title}
                            td #{item.author}
                            td #{item.country}
                            td #{item.year}
                            td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
                            td: a(target="_blank",href="../movie/#{item._id}") 查看  
                                a(target="_blank",href="../admin/update/#{item._id}") 修改  
                                a.btn.btn-danger.btn-sm(type="button",href="../admin/del/#{item._id}",data-id="#{item._id}") 删除  
                                button.btn.btn-sm.btn-danger.del(type="button",data-id="#{item._id}") 删除2
    script(src="/js/admin.js")
